<p id="notice"><%= notice %></p>

<h1>Listing Homes</h1>
<h4>Welcome <%= current_user.name%></h4>
<span class="user">Logged In as :<%= current_user.name%></span>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.name %></td>
        <td><%= home.number %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'logout',destroy_user_session_path ,method: :delete %>
<%= link_to 'New Home', new_home_path %>
